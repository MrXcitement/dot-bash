# shrc -- Personal aliases and functions used by sh and bash.

# Author: Mike Barker <mike@thebarkers.com>
# Created: May 4th, 2015

# Sourced by ~/.profile
# Source ~/.bashrc.d/*.sh files
# Source ~/.bashrc file, only if the current shell is bash.

[ $DEBUG ] && echo "Loading .shrc"

# If not running interactively, just exit
if [ -z "$PS1" ]; then
    return
fi

# Load the sh scripts in personal bashrc.d directory
for script in $HOME/.bashrc.d/*.sh; do
    if [ -r $script ]; then
	[ $DEBUG ] && echo "Loading $script"
	. $script
    fi
done

# load the personal bashrc file if running bash and it exisits
if [ "$BASH" ] && [ -r $HOME/.bashrc ]; then
    . $HOME/.bashrc
fi
