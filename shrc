# shrc -- Personal environment variables and startup programs.
# This file is loaded by .profile
# Symlink this file to ~/.shrc

# Author: Mike Barker <mike@thebarkers.com>
# Created: May 4th, 2015
# Copyright (C) 2015 Mike Barker

echo "Loading .shrc"

# Load the sh scripts in personal profile directory
for script in $HOME/.bashrc.d/*.sh; do
    if [ -r $script ]; then
		source $script
    fi
done

# load the personal bashrc file if running bash and it exisits
if [ "$PS1" ] && [ -r $HOME/.bashrc ]; then
    source $HOME/.bashrc
fi
